<img src="/assets/images/funnyburger.jpeg" id="logo">

<div class="container">

  <div class="uneaten">
    <h2>UNEATEN BURGERS</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="eaten">
    <h2>DEVOURED BURGERS</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ul>
  </div>

</div>

<div class="container">

  <div class="addBurger">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <input type="text" id="newBurg" name="name">
        <button type="submit" class="btn default">add</button>
      </div>

    </form>
  </div>

</div>
